# Uncomment this line to define a global platform for your project
# platform :ios, '8.0'
# Uncomment this line if you're using Swift
# use_frameworks!
inhibit_all_warnings!

target 'BaseProject' do

pod 'AFNetworking'
pod 'BlocksKit'
pod 'CocoaLumberjack' #日志库
pod 'Masonry'#约束布局库
pod 'MBProgressHUD'#提示框
pod 'MJExtension'#JSON转Model库
pod 'MJRefresh'#下拉刷新库
pod 'SDWebImage'
pod 'SVProgressHUD'#SVProgressHUD 和MBProgressHUD 也有点小区别，SVProgressHUD 调用方式很多都是静态方式，使用起来也比较方便，相对MBProgressHUD 比较少设置类型
pod 'TPKeyboardAvoiding'#避免键盘遮挡下方输入框
pod 'MLTransition'#跳转视图拖动返回框架
pod 'FMDB'
pod 'CocoaAsyncSocket'
pod 'Shimmer'#发光字体
pod 'FlatUIKit'#扁平样式的view框架
pod 'AsyncDisplayKit'#这个框架被用于Facebook自家的应用Paper中，能够提高UI的流畅性并缩短响应时间
pod 'RESideMenu'#侧滑控制器
pod 'SWTableViewCell'#列表条目左侧滑动显示更多和删除操作的列表组件
pod 'MWPhotoBrowser'#照片浏览器
pod 'WMPageController'#网易导航栏控制翻页

end

